<NavItemDropDown AriaLabel="@($"Toggle theme color ({ThemeColorManager.SelectedThemeColor})")"
                 Label="Toggle Theme Color"
                 Icon="@BootstrapIcons.SquareHalf">
    <input type="color" id="demoAccentColorPickerControl" class="form-control form-control-color w-100 mb-2"
           style="min-width: 5rem;"
           title="Choose your favorite icon color"
           @bind="@ThemeColorManager.SelectedThemeColor"
           @oninput="@(async args => await ThemeColorManager.SelectThemeColorAsync((string)args.Value!))">
    <input type="text" id="demoAccentColorInputControl" class="form-control form-control-color w-100"
           style="min-width: 5rem;"
           title="Choose your favorite icon color"
           @bind="@ThemeColorManager.SelectedThemeColor"
           @oninput="@(async args => await ThemeColorManager.SelectThemeColorAsync((string)args.Value!))">
</NavItemDropDown>
