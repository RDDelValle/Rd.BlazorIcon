<li class="nav-item dropdown">
    <button class="btn btn-link nav-link w-100 py-2 px-1 px-lg-2 dropdown-toggle d-flex align-items-center" type="button" 
            aria-expanded="false" data-bs-toggle="dropdown" 
            data-bs-display="static" aria-label="@($"Toggle theme color ({ThemeColorManager.SelectedThemeColor})")">
        <BlazorIcon Icon="@BootstrapIcons.SquareHalf" IsFixedWidth />
        <span class="d-lg-none ms-2 flex-grow-1 text-start" id="bi-theme-text">Toggle Accent Color</span>
    </button>
    <div class="dropdown-menu dropdown-menu-end px-2" aria-labelledby="bi-theme-text">
        <input type="color" id="demoAccentColorPickerControl" class="form-control form-control-color w-100 mb-2"
               style="min-width: 5rem;"
               title="Choose your favorite icon color"
               @bind="@ThemeColorManager.SelectedThemeColor"
               @oninput="@(async args => await ThemeColorManager.SelectThemeColorAsync((string)args.Value!))">
        <input type="text" id="demoAccentColorInputControl" class="form-control form-control-color w-100"
               style="min-width: 5rem;"
               title="Choose your favorite icon color"
               @bind="@ThemeColorManager.SelectedThemeColor"
               @oninput="@(async args => await ThemeColorManager.SelectThemeColorAsync((string)args.Value!))">
    </div>
</li>