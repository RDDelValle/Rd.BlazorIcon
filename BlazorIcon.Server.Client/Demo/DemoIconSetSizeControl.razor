@inject DemoIconManager IconManager
<InputGroup Icon="@FontAwesomeIcons.Solid.RulerCombined"
            InputId="demoIconSetSizeControl"
            InputLabel="Size Icon Set">
    <div class="input-group-text bg-body flex-grow-1">
        <input id="demoIconSetSizeControl"
               type="range" class="form-range"
               min="1" max="10" step="1"
               style="min-width: 5rem;"
               @bind="@IconManager.IconSize"
               @oninput="(ChangeEventArgs args) => IconManager.SizeIconSet(Convert.ToInt32(args.Value))">
    </div>
</InputGroup>

