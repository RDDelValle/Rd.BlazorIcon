@page "/"
<PageTitle>Blazor Icon</PageTitle>
<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-4 fw-bolder text-body-emphasis">
        <BrandName />
    </h1>
    <div class="col-md-8 col-lg-6 mx-auto">
        <p class="lead mb-4">A simple, easy to use, blazor svg icon component with packages available for many popular svg icon libraries. Or, use with your own svg library!</p>
        <div class="input-group input-group-lg mb-4">
            <span class="input-group-text">
                <BlazorIcon Icon="@BootstrapIcons.Code"/>
            </span>
            <input type="text" class="form-control text-center text-muted" value="dotnet add package Rd.BlazorIcon" readonly>
            <button class="btn border" type="button">
                <BlazorIcon Icon="@BootstrapIcons.Clipboard"/>
            </button>
        </div>
        <div class="d-flex flex-column flex-md-row gap-3">
            <ButtonPrimary Class="flex-shrink-0 flex-grow-1" Href="demo" IsLarge>Check out the demo</ButtonPrimary>
            <ButtonSecondary Class="flex-shrink-0 flex-grow-1" Href="docs" IsLarge>Read the docs</ButtonSecondary>
        </div>
    </div>
</div>